{
  "name": "diceroller",
  "version": "1.0.0",
  "description": "This is a simple web-based RPG dice roller application. It allows users to select and roll various types of dice commonly used in role-playing games.",
  "main": "app.js",
  "scripts": {
    "minify-js": "uglifyjs src/*.js -o dist/script.min.js --compress",
    "minify-css": "cssnano src/*.css dist/style.min.css",
    "build": "npm run minify-js && npm run minify-css",
    "dev": "nodemon app.js",
    "start": "node app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kawaii-kitsune/SimpleDiceRoller.git"
  },
  "author": "kawaii_kitsune",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kawaii-kitsune/SimpleDiceRoller/issues"
  },
  "homepage": "https://github.com/kawaii-kitsune/SimpleDiceRoller#readme",
  "dependencies": {
    "express": "^4.19.2",
    "nodemon": "^3.1.0"
  },
  "devDependencies": {
    "cssnano": "^6.1.2",
    "uglify-js": "^3.17.4"
  }
}